@namespace("io.renku.solr.client.messages")
protocol SolrMessages {

	record QueryData {
		string query;
		array<string> filter;
		int limit;
		int offset;
		array<string> fields;
		map<string> params;
	}

	record ResponseHeader {
		int status;
		long @aliases(["QTime"]) queryTime;
		map<string> params = {};
	}

	record UpdateResponseHeader {
		int status;
		long @aliases(["QTime"]) queryTime;
	}

	record InsertResponse {
		UpdateResponseHeader responseHeader;
	}
}